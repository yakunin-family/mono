{
  "name": "@mono/root",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:teacher": "turbo run dev --filter=teacher",
    "dev:student": "turbo run dev --filter=student",
    "dev:backend": "turbo run dev --filter=backend",
    "build:teacher": "turbo run build --filter=teacher",
    "build:student": "turbo run build --filter=student",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "turbo": "^2.5.8",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
