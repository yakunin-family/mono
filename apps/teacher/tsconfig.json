{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@mono/typescript-config/react-app.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "references": [
    { "path": "../../packages/ui" },
    { "path": "../../packages/editor" }
  ],
  "include": ["**/*.ts", "**/*.tsx"]
}
