{
  "extends": "@tooling/typescript-config/base.json",
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "composite": true,
    "incremental": true,
    "outDir": "dist",
    "rootDir": ".",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noEmit": false,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src", "providers", "scorers"]
}
