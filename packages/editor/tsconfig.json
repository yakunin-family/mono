{
  "extends": "@tooling/typescript-config/react-library.json",
  "compilerOptions": {
    "composite": true,
    "incremental": true,
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "module": "preserve",
    "moduleResolution": "bundler",
    "noEmit": false,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "references": [{ "path": "../ui" }],
  "include": ["src"]
}
